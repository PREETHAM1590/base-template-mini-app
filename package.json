{
  "name": "arbitips",
  "version": "1.0.0",
  "description": "AI-powered arbitrage opportunities finder for Base network",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
