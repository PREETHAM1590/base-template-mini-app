# Production Environment Configuration
# Copy this to .env.local and fill in your actual values

# Base Network Configuration
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_NETWORK_NAME=base

# Alternative RPC providers (uncomment to use)
# NEXT_PUBLIC_BASE_RPC_URL=https://base.llamarpc.com
# NEXT_PUBLIC_BASE_RPC_URL=https://base.blockpi.network/v1/rpc/public

# Exchange API Keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# CoinGecko API (for additional price data)
COINGECKO_API_KEY=your_coingecko_api_key_here

# The Graph API Keys (for DEX subgraph data)
GRAPH_API_KEY=your_graph_api_key_here

# Contract Addresses (will be set after deployment)
NEXT_PUBLIC_ARBITRAGE_EXECUTOR_ADDRESS=
NEXT_PUBLIC_CEX_BRIDGE_ADDRESS=
NEXT_PUBLIC_MULTICALL_ADDRESS=0xcA11bde05977b3631167028862bE2a173976CA11

# DEX Router Addresses on Base
NEXT_PUBLIC_UNISWAP_V3_ROUTER=0x2626664c2603336E57B271c5C0b26F421741e481
NEXT_PUBLIC_SUSHISWAP_ROUTER=0x6BDED42c6DA8FBf0d2bA55B2fa120C5e0c8D7891
NEXT_PUBLIC_AERODROME_ROUTER=0xcF77a3Ba9A5CA399B7c97c74d54e5b1Beb874E43

# WebSocket URLs for real-time data
BINANCE_WS_URL=wss://stream.binance.com:9443/ws
BASE_WS_URL=wss://base-mainnet.g.alchemy.com/v2/your_alchemy_key_here

# Security
JWT_SECRET=your_jwt_secret_for_auth
FARCASTER_APP_SECRET=your_farcaster_app_secret

# Database (if using)
DATABASE_URL=your_database_connection_string

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Feature Flags
NEXT_PUBLIC_ENABLE_LIVE_TRADING=true
NEXT_PUBLIC_ENABLE_FARCASTER=true
NEXT_PUBLIC_ENABLE_AUTO_EXECUTION=false
NEXT_PUBLIC_MIN_PROFIT_USD=5.0
NEXT_PUBLIC_MAX_GAS_PRICE_GWEI=20