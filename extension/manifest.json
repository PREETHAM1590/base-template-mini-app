{
  "manifest_version": 3,
  "name": "ArbiTips - AI Arbitrage Scanner",
  "short_name": "ArbiTips",
  "description": "AI-powered arbitrage opportunities scanner for Base network",
  "version": "1.0.0",
  "icons": {
    "16": "icon-16x16.png",
    "32": "icon-32x32.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png",
    "192": "icon-192x192.png",
    "512": "icon-512x512.png"
  },
  "action": {
    "default_icon": {
      "16": "icon-16x16.png",
      "32": "icon-32x32.png",
      "48": "icon-48x48.png",
      "128": "icon-128x128.png"
    },
    "default_title": "ArbiTips Scanner",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["content-styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://arbitips.app/*",
    "https://api.arbitips.app/*",
    "https://base.org/*",
    "https://mainnet.base.org/*",
    "http://localhost:*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "contentScript.bundle.js",
        "content-styles.css",
        "icon-*.png",
        "fonts/*",
        "locales/*",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://arbitips.app/*",
      "http://localhost:*/*"
    ]
  }
}